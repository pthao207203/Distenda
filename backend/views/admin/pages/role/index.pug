extend ../../layouts/default.pug
include ../../mixins/box-filter.pug
include ../../mixins/table-tree.pug

block main

  h1 Danh mục nhóm quyền
  .card
      .card-header 
        .row 
          .col-8 Danh sách
          .col-4
            a(
              href=`${prefixAdmin}/role/create`
              class="btn btn-outline-success"
            ) + Thêm mới
      .card-body
        table.table.table-hover.table-sm
          thead
            tr
              th
                input(
                  type="checkbox"
                  input-change="checkall"
                )
              th STT
              th Nhóm quyền
              th Mô tả
              th 

          tbody
            each item, index in role
              tr
                td
                  input(
                    type="checkbox"
                    input-change=item.id
                  )
                td #{index + 1}
                td #{item.RoleName}
                td !{item.RoleDescription}
                td
                  a(
                    class="btn btn-warning btn-sm ml-1"
                    href=`${prefixAdmin}/role/edit/${item.id}`
                  ) Sửa
                  button(
                    class="btn btn-danger btn-sm ml-1"
                    item-id=item.id
                    button-delete
                    data-path=`${prefixAdmin}/role/delete`
                  ) Xoá
  form(
    action=""
    method="POST"
    id="form-delete-item"
    ) 
  script(src="/admin/js/course.js") 


